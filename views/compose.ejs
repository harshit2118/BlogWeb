<%- include("partials/header");-%>
<div class="heading">
    <h1>What's New?</h1>
</div>

<div class="form_container">
    <form id="form1" action="/compose" method="post">
        <div class="form-group">
          <label for="usr">Title:</label>
          <input type="text" class="form-control form_input" id="usr" name="blog_title" autocomplete="none">
        </div>
        <div class="form-group">
          <label for="frm">Post:</label>
          <textarea name="blog_post" class="form-control form_input" id="frm" form="form1" rows="15" autocomplete="none"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include("partials/footer");-%>
